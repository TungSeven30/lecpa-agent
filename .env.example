# =============================================================================
# Krystal Le Agent - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# LLM Providers
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-...

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://lecpa:lecpa_dev@localhost:5432/lecpa_agent
# For async operations
DATABASE_URL_ASYNC=postgresql+asyncpg://lecpa:lecpa_dev@localhost:5432/lecpa_agent

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Object Storage (MinIO/S3)
# -----------------------------------------------------------------------------
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=lecpa-documents
S3_REGION=us-east-1

# -----------------------------------------------------------------------------
# Authentication (Google OIDC)
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Comma-separated list of allowed email domains
ALLOWED_EMAIL_DOMAINS=example.com

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000

# Worker
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# TaxDome Sync Agent (Windows only)
# -----------------------------------------------------------------------------
TAXDOME_DRIVE_ROOT=X:\TaxDome Drive\Clients
SYNC_API_URL=http://localhost:8000
SYNC_API_KEY=change-me-sync-agent-key
